pain for {duration}, now {status}.\"\n\n    def _get_physical_exam(self, transcript):\n        marker = \"[Physical Examination Conducted]\"\n        if marker not in transcript: return \"Not extracted\"\n        post_exam = transcript.split(marker)[1]\n        for line in post_exam.split('\\n'):\n            if \"Physician:\" in line:\n                return line.replace(\"Physician:\", \"\").strip()\n        return \"Not extracted\"\n\n    def _derive_severity(self, transcript, current_status):\n        lower_text = transcript.lower()\n        if \"better\" in lower_text or \"improving\" in lower_text:\n            return \"Mild, improving\"\n        return \"Moderate\"\n\n    def _derive_observations(self, transcript):\n        if \"looks good\" in transcript.lower():\n            return \"Patient appears in normal health, normal gait.\"\n        return \"Patient appears in distress.\"\n\n    def generate(self, transcript, summary):\n        symptoms = \", \".join(summary['Symptoms']) if isinstance(summary['Symptoms'], list) else summary['Symptoms']\n        treatment = \", \".join(summary['Treatment']) if isinstance(summary['Treatment'], list) else summary['Treatment']\n        \n        return {\n            \"Subjective\": {\n                \"Chief_Complaint\": symptoms,\n                # CALL THE NEW CONSTRUCTOR FUNCTION HERE\n                \"History_of_Present_Illness\": self._get_hpi_constructed(transcript, summary.get('Current_Status', 'stable'))\n            },\n            \"Objective\": {\n                \"Physical_Exam\": self._get_physical_exam(transcript),\n                \"Observations\": self._derive_observations(transcript)\n            },\n            \"Assessment\": {\n                \"Diagnosis\": f\"{summary['Diagnosis']} and lower back strain\",\n                \"Severity\": self._derive_severity(transcript, summary.get('Current_Status', ''))\n            },\n            \"Plan\": {\n                \"Treatment\": f\"Continue {treatme