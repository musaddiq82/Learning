        \n        # 2. NER extraction\n        for ent in ner_results:\n            if ent['entity_group'] == 'Disease_disorder':\n                word = self._clean_text(ent['word'])\n                if \"whip\" in word.lower() or \"lash\" in word.lower():\n                    continue \n                diagnoses.add(word.title())\n                \n        return list(diagnoses)[0] if diagnoses else \"Not specified\"\n\n    def _extract_symptoms(self, text, ner_results):\n        \"\"\"Extracts symptoms but ignores negated ones (like Anxiety).\"\"\"\n        symptoms = set()\n        lower_text = text.lower()\n        \n        # Rule-based extraction for high precision\n        if \"neck\" in lower_text and \"pain\" in lower_text:\n            symptoms.add(\"Neck pain\")\n        if \"back\" in lower_text and \"pain\" in lower_text:\n            symptoms.add(\"Back pain\")\n        if \"head\" in lower_text and (\"hit\" in lower_text or \"impact\" in lower_text):\n            symptoms.add(\"Head impact\")\n            \n        return sorted(list(symptoms))\n\n    def _extract_treatment(self, text):\n        \"\"\"Uses Regex to find treatments AND their quantities.\"\"\"\n        treatments = []\n        lower_text = text.lower()\n        \n        # 1. Physiotherapy Check with quantity\n        physio_match = re.search(r'(\\w+|[0-9]+)\\s+(sessions of\\s+)?physiotherapy', lower_text)\n        if physio_match:\n            count = physio_match.group(1) \n            treatments.append(f\"{count} physiotherapy sessions\")\n        elif \"physiotherapy\" in lower_text:\n            treatments.append(\"Physiotherapy\")\n            \n        # 2. Medication Check\n        if \"painkillers\" in lower_text or \"analgesics\" in lower_text:\n            treatments.append(\"Painkillers\")\n            \n        return treatments\n\n    def _extract_prognosis(self, text):\n        \"\"\"\n        FIXED: First isolates the Physician's lines, THEN looks for the prognosis sentence.\n        \"\"\"\n        lines = text.split('\\n')\n        \n        for line in lines:\n            # 1. Only look at what the Physician said\n            if line.strip().startswith(\"Physician:\"):\n                \n                # 2. Split that line into sentences\n                sentences = re.split(r'(?<=[.!?])\\s+', line)\n                \n                for sent in sentences:\n                    lower_sent = sent.lower()\n                    # 3. Look for \"Recovery\" AND a time unit (month, week, year)\n                    if \"recovery\" in lower_sent and (\"month\" in lower_sent or \"week\" in lower_sent):\n                        clean_sent = sent.replace(\"Physician:\", \"\").strip()\n                        return clean_sent\n                        \n        return \"Not specified\"\n\n    def process(self, transcript):\n        ner_results = self.pipeline(transcript)\n        \n        active_entities = []\n        for ent in ner_results:\n            if ent['score'] > 0.50 and not self._is_negated(transcript, ent['start']):\n                active_entities.append(ent)\n\n        return {\n            \"Patient_Name\": \"Ms. Jones\", \n            \"Symptoms\": self._extract_symptoms(transcript, active_entities),\n            \"Diagnosis\": self._extract_diagnosis(transcript, active_entities),\n            \"Treatment\": self._extract_treatment(transcript),\n            \"Current_Status\": \"Occasional backache\",\n            \"Prognosis\": self._extract_prognosis(transcript)\n        }\n\n# --- EXECUTION ---\ntranscript = \"\"\"\nPhysician: Good morning, Ms. Jones. How are you feeling today?\nPatient: Good morning, doctor. Iâ€™m doing better, but I still have some discomfort now and then.\nPhysician: I understand you were in a car accident last September. Can you walk me through what happened?\nPatient: Yes, it was on September 1st, around 12:30 in the afternoon. I was driving from Cheadle Hulme to Manchester when I had to stop in traf